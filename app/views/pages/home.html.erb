<div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">SpotSage</br></span>Reserve a parking space anywhere you go!</h1>
  </div>
</div>

<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Where do you want to park?", class: "form-control", id: "autolocation" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :start_at, params[:start_at], placeholder: "Start Date", class: "form-control datepicker" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :end_at, params[:end_at], placeholder: "End Date", class: "form-control datepicker" %>
    </div>
  </div>
  <br/><br/>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>

<br/><hr/><br/>

<!-- Spaces -->
<div><h3>Parking Spaces</h3></div>
<br/>

<div class="row">
  <%= render partial: "parkings/parkings_list", locals: {parkings: @parkings} %>
</div>

<!-- Locations -->
<div><h3>Locations</h3></div>
<br/>

<div class="row">
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=new_york">
      <div class="discovery-card" style="background-image: url('/assets/nyc.jpg')"></div>
    </a>
    <h3>New York, NY</h3>
    <br/>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=miami">
      <div class="discovery-card" style="background-image: url('/assets/miami.jpg')"></div>
    </a>
    <h3>Miami, FL</h3>
    <br/>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=">
      <div class="discovery-card" style="background-image: url('/assets/brooklyn.jpg')"></div>
    </a>
    <h3>Brooklyn, NY</h3>
    <br/>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=san_francisco">
      <div class="discovery-card" style="background-image: url('/assets/san_francisco.jpg')"></div>
    </a>
    <h3>San Francisco, CA</h3>
    <br/>
  </div>
</div>


<script>
  $('#start_at').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#end_at').datepicker("option", "minDate", selected);
      $('#end_at').attr("disabled", false);
    }
  });

  $('#end_at').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#start_at').datepicker("option", "maxDate", selected);
    }
  });

  $(function() {
    $("#autolocation").geocomplete();
  })
</script>
